def cm_to_inches():
    mode = float(input("Enter 1 for inches to cm: \nEnter 2 for cm to inches: ")) # user input for which conversion they want
    if mode == 1:
        inches = float(input("how many inches? "))
        return print(inches * 2.54)
    elif mode == 2:
        cm = float(input("how many cm? "))
        return print(cm / 2.54)


cm_to_inches()
